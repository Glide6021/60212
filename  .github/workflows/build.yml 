name: Build EXE
on: [push]
jobs:
  build:
    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
      - name: Install dependencies
        run: pip install pyinstaller requests pyttsx3
      - name: Build EXE
        run: pyinstaller --onefile 2.py
      - uses: actions/upload-artifact@v3
        with:
          name: MyAssistant
          path: dist/2.exe
